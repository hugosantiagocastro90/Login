<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.MainPage">

    <ContentPage.Content>
        <Grid>
            <Image Source="logo.jpg" Aspect="AspectFill" />

            <BoxView Color="#u0699d" Opacity="0.8" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="logo.png" WidthRequest="100" HeightRequest="100" Margin="0,50,0,30" />

                <StackLayout Grid.Row="1" Padding="30,20">
                    <Entry Placeholder="Usuario" PlaceholderColor="White"/>
                    <Entry Placeholder="Contraseña" PlaceholderColor="White"/>
                    <Button Text="Iniciar Sesión" Background="White" BorderRadius="20" TextColor="#e0699d" />
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Invitado" />
                        <Label Text="Registro" HorizontalOptions="EndAndExpand" FontAttributes="Bold" />
                    </StackLayout>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
